			<insert id="insertOrders" parameterType="OrdersAddressVO">
					insert all
					into orders values (or_no.nextval,'okkk',#{productNo},#{orderQty},#{orderPrice},'배송준비','취소',SYSDATE,#{orderColor},#{orderSize}) 
